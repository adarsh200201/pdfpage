# LibreOffice-enabled Dockerfile for PdfPage Backend
FROM node:18-bullseye

# Install LibreOffice and comprehensive heavy libraries
RUN apt-get update && apt-get install -y \
    # üìÑ PDF Processing & Document Conversion
    ghostscript \
    poppler-utils \
    qpdf \
    pdftk \
    mupdf-tools \
    libreoffice \
    libreoffice-writer \
    libreoffice-calc \
    libreoffice-impress \
    libreoffice-draw \
    unoconv \
    pandoc \
    wkhtmltopdf \
    \
    # üñºÔ∏è Image Processing & Graphics
    imagemagick \
    graphicsmagick \
    libvips \
    libvips-tools \
    optipng \
    jpegoptim \
    pngquant \
    webp \
    libwebp-dev \
    \
    # üé• Video Processing
    ffmpeg \
    x264 \
    \
    # üî§ OCR & Text Processing
    tesseract-ocr \
    tesseract-ocr-all \
    gocr \
    \
    # üñ•Ô∏è Rendering & Graphics Libraries
    libgl1-mesa-glx \
    libxi6 \
    libxrender1 \
    libxext6 \
    libsm6 \
    \
    # üì¶ Build Tools & Compilers
    build-essential \
    cmake \
    autoconf \
    pkg-config \
    nasm \
    gcc \
    g++ \
    make \
    \
    # üêç Python & Development
    python3 \
    python3-dev \
    python3-pip \
    \
    # üé® Canvas & Cairo Dependencies
    libcairo2-dev \
    libpango1.0-dev \
    libpangocairo-1.0-0 \
    libgdk-pixbuf2.0-dev \
    libjpeg-dev \
    libgif-dev \
    libpng-dev \
    librsvg2-dev \
    \
    # üìö Archive & Compression
    p7zip-full \
    zip \
    unzip \
    rar \
    unrar \
    xz-utils \
    \
    # üîß System Libraries
    libfontconfig1-dev \
    libfreetype6-dev \
    libxml2-dev \
    libssl-dev \
    \
    # üî§ Fonts (Comprehensive)
    fonts-liberation \
    fonts-dejavu \
    fonts-noto \
    fonts-noto-cjk \
    fonts-noto-color-emoji \
    fonts-roboto \
    fonts-open-sans \
    \
    # ‚òï Java Runtime
    default-jre-headless \
    openjdk-11-jre-headless \
    \
    # üéØ Specialized Tools
    calibre \
    antiword \
    catdoc \
    exiftool \
    \
    # Utilities
    curl \
    gnupg \
    ca-certificates \
    wget \
    unzip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Create temp directories for LibreOffice
RUN mkdir -p temp/input temp/output && \
    chmod 755 temp temp/input temp/output

# Set environment variables for LibreOffice
ENV HOME=/tmp
ENV LIBREOFFICE_AVAILABLE=true

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/api/pdf/health || exit 1

# Start the application
CMD ["npm", "start"]
