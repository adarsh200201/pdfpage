# Production Environment Configuration
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://your_prod_user:your_prod_password@your_prod_cluster.mongodb.net/pdfpage_prod?retryWrites=true&w=majority

# JWT Configuration - REPLACE WITH SECURE VALUES
JWT_SECRET=YOUR_SECURE_JWT_SECRET_256_BITS_OR_MORE
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration - Use production SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@domain.com
SMTP_PASS=your_production_app_password
EMAIL_FROM=noreply@pdfpage.com
EMAIL_FROM_NAME=PdfPage

# Cloudinary Configuration - PRODUCTION KEYS
CLOUDINARY_CLOUD_NAME=your_prod_cloud_name
CLOUDINARY_API_KEY=your_prod_api_key
CLOUDINARY_API_SECRET=your_prod_api_secret

# Razorpay Configuration - LIVE KEYS
RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_LIVE_KEY_SECRET

# Server Configuration
PORT=5000
FRONTEND_URL=https://pdfpage.in

# File Upload Configuration
